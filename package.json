{
  "name": "gmail-invoice-sync",
  "version": "0.0.1",
  "description": "extract invoice attachments from gmail",
  "main": "src/index.ts",
  "bin": {
    "gmail-invoice-sync": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/gmail-invoice-sync",
    "lint": "oxlint src/",
    "format": "oxlint --fix src/",
    "check": "tsc --noEmit"
  },
  "type": "module",
  "keywords": ["gmail", "invoice", "sync", "attachments", "email"],
  "author": "Igor Bedesqui",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bdsqqq/gmail-invoice-sync"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@axiomhq/js": "^1.4.0",
    "@axiomhq/logging": "^0.2.0",
    "@google-cloud/local-auth": "^3.0.1",
    "googleapis": "^168.0.0"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^24.10.2",
    "oxlint": "^1.42.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
